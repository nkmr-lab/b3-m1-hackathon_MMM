FROM python:3.9.18-slim-bullseye

WORKDIR /app

# 依存関係をコピーしてインストール
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# アプリケーションコードをコピー
COPY ./app/ .

# schema.sql もコピー
COPY ./app/schema.sql /app/schema.sql

# コンテナ起動時にマイグレーションを実行し、FastAPI を起動
CMD ["sh", "-c", "python migrate.py && uvicorn main:app --host 0.0.0.0 --port 8080"]